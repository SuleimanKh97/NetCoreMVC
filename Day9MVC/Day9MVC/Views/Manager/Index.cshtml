@model HRManagement.ViewModels.ManagerDashboardViewModel

@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Manager Dashboard</h1>

    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Tasks</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingTasks</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Leave Requests</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingLeaveRequests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="CreateEmployee" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus mr-2"></i> Add New Employee
                        </a>
                        <a asp-action="AssignTask" class="list-group-item list-group-item-action">
                            <i class="fas fa-tasks mr-2"></i> Assign New Task
                        </a>
                        <a asp-action="LeaveRequests" class="list-group-item list-group-item-action">
                            <i class="fas fa-calendar-check mr-2"></i> Review Leave Requests
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 