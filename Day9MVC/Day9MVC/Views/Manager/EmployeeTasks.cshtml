@model IEnumerable<HRManagement.Models.Task>

@{
    ViewData["Title"] = "Employee Tasks";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tasks for @ViewBag.EmployeeName</h1>
        <a asp-action="AssignTask" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Assign New Task
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">To Do</h5>
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.Status == TaskStatus.ToDo))
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <h6 class="card-title">@task.Title</h6>
                                <p class="card-text small">@task.Description</p>
                                <p class="card-text">
                                    <small class="text-muted">Due: @task.DueDate.ToString("g")</small>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Doing</h5>
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.Status == TaskStatus.Doing))
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <h6 class="card-title">@task.Title</h6>
                                <p class="card-text small">@task.Description</p>
                                <p class="card-text">
                                    <small class="text-muted">Due: @task.DueDate.ToString("g")</small>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Done</h5>
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.Status == TaskStatus.Done))
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <h6 class="card-title">@task.Title</h6>
                                <p class="card-text small">@task.Description</p>
                                <p class="card-text">
                                    <small class="text-muted">Due: @task.DueDate.ToString("g")</small>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 