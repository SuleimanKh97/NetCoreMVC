@model IEnumerable<HRManagement.Models.ApplicationUser>

@{
    ViewData["Title"] = "Managers";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Managers</h1>
        <a asp-action="CreateManager" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add Manager
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var manager in Model)
                        {
                            <tr>
                                <td>@($"{manager.FirstName} {manager.LastName}")</td>
                                <td>@manager.Email</td>
                                <td>@manager.Department?.Name</td>
                                <td>@manager.JoinDate.ToShortDateString()</td>
                                <td>
                                    <a asp-action="EditManager" asp-route-id="@manager.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="ManagerDetails" asp-route-id="@manager.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 